<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Wydaj lub rozłóż towar"
        android:textColor="#1B1A1A"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/zlokalizuj_prompt_kod_towaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#1B1A1A"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/zlokalizuj_prompt_gniazdo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#1B1A1A"
        android:textSize="24sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/zlokalizuj_prompt_ilosc"
            android:layout_width="100dp"
            android:layout_height="63dp"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/zlokalizuj_prompt_minus_btn"
            android:layout_width="49dp"
            android:layout_height="53dp"
            android:onClick="zlokalizuj_crud_minus_btn"
            android:text="-"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/zlokalizuj_prompt_ilosc"
            app:layout_constraintEnd_toStartOf="@+id/zlokalizuj_prompt_ilosc"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/zlokalizuj_prompt_ilosc" />

        <Button
            android:id="@+id/zlokalizuj_prompt_plus_btn"
            android:layout_width="49dp"
            android:layout_height="53dp"
            android:onClick="zlokalizuj_crud_plus_btn"
            android:text="+"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/zlokalizuj_prompt_ilosc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/zlokalizuj_prompt_ilosc"
            app:layout_constraintTop_toTopOf="@+id/zlokalizuj_prompt_ilosc" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wydaj_lokalizacja_cancel_btn"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="zlokalizuj_crud_cancel_btn"
            android:text="Anuluj" />

        <View
            android:id="@+id/divider5"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/wydaj_lokalizacja_confirm_btn"
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="zlokalizuj_crud_confirm_btn"
            android:text="Zapisz" />
    </LinearLayout>

</LinearLayout>